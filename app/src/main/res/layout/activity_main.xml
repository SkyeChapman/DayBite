<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".MainLoginActivity"
    android:id="@+id/dayBite"
    >

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="78dp"
            android:text="DayBite"
            android:textSize="55sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/logoIcon"
            android:layout_width="77dp"
            android:layout_height="78dp"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="48dp"
            android:adjustViewBounds="true"
            android:src="@drawable/daybite" />

        <EditText
            android:id="@+id/logNUSER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appName"
            android:layout_marginTop="248dp"
            android:background="#30ffffff"
            android:drawableLeft="@drawable/ic_baseline_account_circle_24"
            android:drawablePadding="3dp"
            android:hint="Username"
            android:padding="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/logNPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="320dp"
            android:background="#30ffffff"
            android:drawableLeft="@drawable/ic_baseline_verified_user_24"
            android:drawablePadding="3dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textStyle="italic" />

        <Button
            android:id="@+id/loginBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="440dp"
            android:backgroundTint="#BB8FCE"
            android:text="LOGIN" />

        <Button
            android:id="@+id/forgotBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="535dp"
            android:backgroundTint="@color/material_on_surface_stroke"
            android:text="Forgot Password"
            android:textSize="12sp" />

        <Button
            android:id="@+id/regBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginBTN"
            android:layout_marginLeft="275dp"
            android:layout_marginTop="535dp"
            android:backgroundTint="@color/material_on_surface_stroke"
            android:text="Register"
            android:textSize="12sp" />
    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>