<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Interest 1"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Interest 2"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Interest 3"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Interest 4"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Interest 5"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Interest 6"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_7"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Interest 7"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/blurb_item" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="339dp"
        android:layout_height="49dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="594dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/searchClick"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Search" />
    </com.google.android.material.textfield.TextInputLayout>

    <SearchView
        android:id="@+id/searchClick"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="526dp"
        android:layout_marginBottom="16dp"
        android:background="#E1E1E1"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.489"
        tools:ignore="DuplicateClickableBoundsCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>