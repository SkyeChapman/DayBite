<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AccountFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="434dp"
        android:src="@drawable/login_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="617dp"
        android:gravity="center"
        android:text="DayBite"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="211dp"
        android:gravity="center"
        android:text="Edit Profile"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/saveEdit"
        style="@style/FirebaseUI.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Save"
        app:icon="@drawable/favorite_toggle_selector"
        app:iconTint="#686468"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout4" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePic"
        android:layout_width="0dp"
        android:layout_height="105dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="46dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/notifyUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        tools:src="@drawable/profile_pic" />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="272dp"
        android:background="#C5B4E3"
        android:drawablePadding="3dp"
        android:hint="First Name"
        android:padding="2dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="302dp"
        android:background="#C5B4E3"
        android:drawablePadding="3dp"
        android:hint="Last Name"
        android:padding="2dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/acctEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="332dp"
        android:background="#C5B4E3"
        android:drawablePadding="3dp"
        android:hint="Email"
        android:padding="2dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/acctPass"
        android:layout_width="385dp"
        android:layout_height="21dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="365dp"
        android:background="#C5B4E3"
        android:drawablePadding="3dp"
        android:hint="Password"
        android:padding="2dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/acctAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="392dp"
        android:background="#C5B4E3"
        android:drawablePadding="3dp"
        android:hint="Date of Birth"
        android:padding="2dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/notifyUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="292dp"
        android:layout_marginTop="176dp"
        android:text="Notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/themeChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="284dp"
        android:layout_marginTop="196dp"
        android:text="Night Theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/logoutBtn"
        android:layout_width="47dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="670dp"
        android:src="@drawable/ic_baseline_exit_to_app_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039" />

    <FrameLayout
        android:id="@+id/frameLayout4"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginTop="433dp"
        android:background="#D3D3D3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/musicCheckBox"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#EFE5E5"
            android:checked="false"
            android:text="Music" />

        <CheckBox
            android:id="@+id/foodCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginBottom="21dp"
            android:text="Food"
            app:layout_constraintBottom_toTopOf="@+id/historyCheckBox"
            app:layout_constraintStart_toStartOf="@+id/historyCheckBox" />

        <CheckBox
            android:id="@+id/techCheckBox"
            android:layout_width="93dp"
            android:layout_height="48dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="50dp"
            android:text="Tech"
            app:layout_constraintBottom_toBottomOf="@+id/animalsCheckBox"
            app:layout_constraintStart_toStartOf="@+id/musicCheckBox"
            app:layout_constraintTop_toTopOf="@+id/musicCheckBox" />

        <CheckBox
            android:id="@+id/historyCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="History"
            app:layout_constraintStart_toEndOf="@+id/techCheckBox"
            app:layout_constraintTop_toTopOf="@+id/techCheckBox" />

        <CheckBox
            android:id="@+id/animalsCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="1dp"
            android:text="Animals"
            app:layout_constraintBottom_toTopOf="@+id/aquaticCheckBox"
            app:layout_constraintEnd_toEndOf="@+id/techCheckBox" />

        <CheckBox
            android:id="@+id/spaceCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="100dp"
            android:text="Space"
            app:layout_constraintStart_toStartOf="@+id/historyCheckBox"
            app:layout_constraintTop_toBottomOf="@+id/historyCheckBox" />

        <CheckBox
            android:id="@+id/aquaticCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Aquatic" />

        <CheckBox
            android:id="@+id/filmsCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:text="Films"
            app:layout_constraintBottom_toTopOf="@+id/sportsCheckBox"
            app:layout_constraintStart_toStartOf="@+id/sportsCheckBox" />

        <CheckBox
            android:id="@+id/economicsCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:text="Economics"
            app:layout_constraintBaseline_toBaselineOf="@+id/sportsCheckBox"
            app:layout_constraintStart_toStartOf="@+id/aquaticCheckBox" />

        <CheckBox
            android:id="@+id/sportsCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="50dp"
            android:text="Sports" />


    </FrameLayout>

    <RadioButton
        android:id="@+id/deactivateBTN"
        android:layout_width="105dp"
        android:layout_height="21dp"
        android:layout_marginTop="709dp"
        android:layout_marginEnd="306dp"
        android:text="Disable account"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>