<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/blurbLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            // Implement image


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mBlurbTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tvBlurbTitle"
                    android:textColor="@color/black"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mBlurbBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="tvBlurbBody"
                    android:textColor="@color/black"
                    android:textSize="26dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>


        <ToggleButton
            android:id="@+id/tbFavoriteButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/favorite_toggle_selector"
            android:clickable="true"
            android:textOff=""
            android:textOn="">

        </ToggleButton>

    </RelativeLayout>

</LinearLayout>
